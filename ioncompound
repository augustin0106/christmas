<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>化學離子大師 by駿佾師</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- React & ReactDOM -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <!-- Babel -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;700&display=swap');
        
        body {
            font-family: 'Noto Sans TC', sans-serif;
            background-color: #f0f9ff;
            background-image: radial-gradient(#e0f2fe 2px, transparent 2px);
            background-size: 32px 32px;
        }

        /* 3D 翻牌特效核心 CSS */
        .perspective-1000 {
            perspective: 1000px;
        }
        .transform-style-3d {
            transform-style: preserve-3d;
        }
        .backface-hidden {
            backface-visibility: hidden;
        }
        .rotate-y-180 {
            transform: rotateY(180deg);
        }

        /* 動畫類別 */
        .fade-in-up {
            animation: fadeInUp 0.5s ease-out forwards;
        }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* 原子旋轉動畫 */
        .atom-orbit { animation: orbit 8s linear infinite; }
        @keyframes orbit { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }
        
        /* 燒杯冒泡動畫 */
        .bubble { animation: rise 2s infinite ease-in; opacity: 0; }
        @keyframes rise { 
            0% { bottom: 0; opacity: 0; transform: scale(0.5); } 
            50% { opacity: 1; } 
            100% { bottom: 100%; opacity: 0; transform: scale(1.2); } 
        }

        /* 分子浮動動畫 */
        .float-molecule { animation: float 6s ease-in-out infinite; }
        @keyframes float { 
            0%, 100% { transform: translateY(0) rotate(0deg); } 
            50% { transform: translateY(-20px) rotate(10deg); } 
        }

        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useRef, useMemo } = React;

        // --- 設定區 ---
        const GAS_URL = "https://script.google.com/macros/s/AKfycbz6WfGTvyNoG-bgZt8ecaTOHWmRzbLcUqoCjWsFUUyUtFpX32cHLnWX0Tg6zk7SA7Cf/exec";

        // --- 資料庫 (基於您的 PDF) ---
        const IONS_DB = [
            // +1 陽離子
            { id: 'H+', symbol: 'H', charge: 1, name: '氫離子', type: 'cation', isPoly: false },
            { id: 'Li+', symbol: 'Li', charge: 1, name: '鋰離子', type: 'cation', isPoly: false },
            { id: 'Na+', symbol: 'Na', charge: 1, name: '鈉離子', type: 'cation', isPoly: false },
            { id: 'K+', symbol: 'K', charge: 1, name: '鉀離子', type: 'cation', isPoly: false },
            { id: 'Ag+', symbol: 'Ag', charge: 1, name: '銀離子', type: 'cation', isPoly: false },
            { id: 'NH4+', symbol: 'NH4', charge: 1, name: '銨根離子', type: 'cation', isPoly: true },
            { id: 'Cu+', symbol: 'Cu', charge: 1, name: '亞銅離子', type: 'cation', isPoly: false },
            // +2 陽離子
            { id: 'Mg2+', symbol: 'Mg', charge: 2, name: '鎂離子', type: 'cation', isPoly: false },
            { id: 'Ca2+', symbol: 'Ca', charge: 2, name: '鈣離子', type: 'cation', isPoly: false },
            { id: 'Ba2+', symbol: 'Ba', charge: 2, name: '鋇離子', type: 'cation', isPoly: false },
            { id: 'Zn2+', symbol: 'Zn', charge: 2, name: '鋅離子', type: 'cation', isPoly: false },
            { id: 'Pb2+', symbol: 'Pb', charge: 2, name: '鉛離子', type: 'cation', isPoly: false },
            { id: 'Cu2+', symbol: 'Cu', charge: 2, name: '銅離子', type: 'cation', isPoly: false },
            { id: 'Fe2+', symbol: 'Fe', charge: 2, name: '亞鐵離子', type: 'cation', isPoly: false },
            { id: 'Hg2+', symbol: 'Hg', charge: 2, name: '汞離子', type: 'cation', isPoly: false },
            { id: 'Sr2+', symbol: 'Sr', charge: 2, name: '鍶離子', type: 'cation', isPoly: false },
            // +3, +4 陽離子
            { id: 'Al3+', symbol: 'Al', charge: 3, name: '鋁離子', type: 'cation', isPoly: false },
            { id: 'Fe3+', symbol: 'Fe', charge: 3, name: '鐵離子', type: 'cation', isPoly: false },
            { id: 'Cr3+', symbol: 'Cr', charge: 3, name: '鉻離子', type: 'cation', isPoly: false },
            { id: 'Mn4+', symbol: 'Mn', charge: 4, name: '錳離子', type: 'cation', isPoly: false },
            // -1 陰離子
            { id: 'F-', symbol: 'F', charge: -1, name: '氟離子', type: 'anion', isPoly: false },
            { id: 'Cl-', symbol: 'Cl', charge: -1, name: '氯離子', type: 'anion', isPoly: false },
            { id: 'Br-', symbol: 'Br', charge: -1, name: '溴離子', type: 'anion', isPoly: false },
            { id: 'I-', symbol: 'I', charge: -1, name: '碘離子', type: 'anion', isPoly: false },
            { id: 'OH-', symbol: 'OH', charge: -1, name: '氫氧根離子', type: 'anion', isPoly: true },
            { id: 'NO3-', symbol: 'NO3', charge: -1, name: '硝酸根離子', type: 'anion', isPoly: true },
            { id: 'HCO3-', symbol: 'HCO3', charge: -1, name: '碳酸氫根離子', type: 'anion', isPoly: true },
            { id: 'CH3COO-', symbol: 'CH3COO', charge: -1, name: '醋酸根離子', type: 'anion', isPoly: true },
            // -2 陰離子
            { id: 'O2-', symbol: 'O', charge: -2, name: '氧離子', type: 'anion', isPoly: false },
            { id: 'S2-', symbol: 'S', charge: -2, name: '硫離子', type: 'anion', isPoly: false },
            { id: 'SO4 2-', symbol: 'SO4', charge: -2, name: '硫酸根離子', type: 'anion', isPoly: true },
            { id: 'CO3 2-', symbol: 'CO3', charge: -2, name: '碳酸根離子', type: 'anion', isPoly: true },
            { id: 'CrO4 2-', symbol: 'CrO4', charge: -2, name: '鉻酸根離子', type: 'anion', isPoly: true },
            // -3 陰離子
            { id: 'PO4 3-', symbol: 'PO4', charge: -3, name: '磷酸根離子', type: 'anion', isPoly: true },
        ];

        // 輔助函式：最大公因數
        const gcd = (a, b) => !b ? a : gcd(b, a % b);

        // 輔助函式：產生 HTML 格式的離子符號 (例如 H+)
        const renderIonSymbol = (ion) => {
            const chargeVal = Math.abs(ion.charge);
            const sign = ion.charge > 0 ? '+' : '-';
            const chargeStr = (chargeVal > 1 ? chargeVal : '') + sign;
            
            // 處理數字下標 (如 NH4, NO3)
            const parts = ion.symbol.split(/(\d+)/).filter(Boolean);
            return (
                <span>
                    {parts.map((part, i) => 
                        isNaN(part) ? part : <sub key={i}>{part}</sub>
                    )}
                    <sup>{chargeStr}</sup>
                </span>
            );
        };

        // 輔助函式：產生 HTML 格式的化合物化學式
        const renderCompoundFormula = (cation, anion, cCount, aCount) => {
            // 特殊處理：醋酸根 (CH3COO-) 通常寫在前面 (CH3COONa)，但國中通常不特別強調，這裡若為醋酸根做個特殊處理
            // 這裡採用標準無機寫法：陽離子在前，陰離子在後，除非是醋酸根
            
            const isAcetate = anion.id === 'CH3COO-';
            
            const renderPart = (ion, count) => {
                let parts = ion.symbol.split(/(\d+)/).filter(Boolean);
                let html = parts.map((p, i) => isNaN(p) ? p : <sub key={i}>{p}</sub>);
                
                // 如果是原子團且數量 > 1，需要加括號
                if (ion.isPoly && count > 1) {
                    return <span>({html})<sub>{count}</sub></span>;
                } else if (count > 1) {
                    return <span>{html}<sub>{count}</sub></span>;
                }
                return <span>{html}</span>;
            };

            if (isAcetate) {
                // 醋酸根特殊寫法：CH3COO + 金屬
                return <span className="font-serif text-2xl">{renderPart(anion, aCount)}{renderPart(cation, cCount)}</span>;
            } else {
                return <span className="font-serif text-2xl">{renderPart(cation, cCount)}{renderPart(anion, aCount)}</span>;
            }
        };

        // --- 動畫元件 ---
        // 1. 原子動畫
        const AtomAnimation = () => (
            <div className="relative w-48 h-48 mx-auto my-8">
                <div className="absolute inset-0 flex items-center justify-center">
                    <div className="w-8 h-8 bg-blue-600 rounded-full shadow-lg z-10"></div>
                </div>
                {[0, 60, 120].map((deg, i) => (
                    <div key={i} className="absolute inset-0 atom-orbit" style={{ animationDelay: `-${i * 2}s`, transform: `rotate(${deg}deg)` }}>
                        <div className="w-full h-full border-2 border-blue-200 rounded-full flex items-center justify-start transform rotate-45">
                            <div className="w-4 h-4 bg-red-400 rounded-full -ml-2"></div>
                        </div>
                    </div>
                ))}
                <p className="absolute -bottom-12 w-full text-center text-blue-600 font-bold">原子結構載入中...</p>
            </div>
        );

        // 2. 燒杯動畫
        const BeakerAnimation = () => (
            <div className="relative w-32 h-40 border-b-4 border-x-4 border-gray-400 mx-auto my-8 rounded-b-xl overflow-hidden bg-white/50">
                <div className="absolute bottom-0 w-full h-3/4 bg-green-400/30">
                    {[...Array(8)].map((_, i) => (
                        <div key={i} className="absolute bg-white rounded-full bubble" 
                             style={{ 
                                 width: Math.random() * 10 + 5 + 'px', 
                                 height: Math.random() * 10 + 5 + 'px', 
                                 left: Math.random() * 80 + 10 + '%',
                                 animationDuration: Math.random() * 1 + 1 + 's',
                                 animationDelay: Math.random() * 2 + 's'
                             }}></div>
                    ))}
                </div>
                <p className="absolute -bottom-12 w-full text-center text-green-600 font-bold">化學反應準備中...</p>
            </div>
        );

        // 3. 分子動畫
        const MoleculeAnimation = () => (
            <div className="relative w-64 h-48 mx-auto my-8 flex items-center justify-center float-molecule">
                <div className="flex items-center space-x-1">
                    <div className="w-12 h-12 bg-purple-500 rounded-full shadow-inner flex items-center justify-center text-white font-bold">I</div>
                    <div className="h-2 w-12 bg-gray-400"></div>
                    <div className="w-16 h-16 bg-blue-500 rounded-full shadow-inner flex items-center justify-center text-white font-bold text-xl">Love</div>
                    <div className="h-2 w-12 bg-gray-400"></div>
                    <div className="w-12 h-12 bg-pink-500 rounded-full shadow-inner flex items-center justify-center text-white font-bold">Chem</div>
                </div>
                <p className="absolute -bottom-12 w-full text-center text-purple-600 font-bold">分子鍵結合成中...</p>
            </div>
        );

        // --- 卡牌元件 (更新版：包含編號與背面雙重顯示) ---
        const FlashCard = ({ number, front, back, colorClass }) => {
            const [flipped, setFlipped] = useState(false);

            return (
                <div 
                    className="relative w-full h-40 cursor-pointer perspective-1000 group"
                    onClick={() => setFlipped(!flipped)}
                >
                    <div className={`w-full h-full duration-500 transform-style-3d transition-transform ${flipped ? 'rotate-y-180' : ''}`}>
                        {/* 正面 */}
                        <div className={`absolute w-full h-full backface-hidden rounded-xl shadow-md border-2 ${colorClass} flex flex-col items-center justify-center p-2 relative`}>
                            {/* 編號 (左上角) */}
                            <div className="absolute top-2 left-2 bg-gray-700 text-white text-xs font-bold w-6 h-6 rounded-full flex items-center justify-center shadow-sm">
                                {number}
                            </div>
                            
                            <h3 className="text-xl font-bold text-gray-800 text-center mt-2">{front}</h3>
                            <div className="absolute bottom-2 right-2 text-gray-500 text-xs">
                                <i className="fa-solid fa-rotate mr-1"></i>點擊翻看答案
                            </div>
                        </div>

                        {/* 背面 (翻轉後) */}
                        <div className={`absolute w-full h-full backface-hidden rotate-y-180 rounded-xl shadow-md bg-white border-2 border-gray-400 flex flex-col items-center justify-center p-2 relative`}>
                             {/* 編號 (背面也顯示方便對照) */}
                             <div className="absolute top-2 left-2 bg-gray-500 text-white text-xs font-bold w-6 h-6 rounded-full flex items-center justify-center shadow-sm">
                                {number}
                            </div>
                            
                            {/* 顯示中文題目 */}
                            <div className="text-sm font-bold text-gray-500 mb-1">{front}</div>
                            
                            {/* 顯示答案 */}
                            <div className="text-3xl font-serif text-blue-700">
                                {back}
                            </div>
                        </div>
                    </div>
                </div>
            );
        };

        // --- 主程式 App ---
        function App() {
            const [gameState, setGameState] = useState('intro'); // intro, level1, level2, leaderboard
            const [animIndex, setAnimIndex] = useState(0);
            const [user, setUser] = useState({ name: '', id: '' });
            
            // 遊戲數據
            const [level1Data, setLevel1Data] = useState([]);
            const [level2Data, setLevel2Data] = useState([]);
            const [startTime, setStartTime] = useState(0);
            const [leaderboard, setLeaderboard] = useState([]);

            // 初始化：隨機選擇動畫
            useEffect(() => {
                setAnimIndex(Math.floor(Math.random() * 3));
            }, []);

            // 產生關卡資料
            const initGame = () => {
                // Level 1: 5 陽 + 5 陰
                const cations = IONS_DB.filter(i => i.type === 'cation').sort(() => 0.5 - Math.random()).slice(0, 5);
                const anions = IONS_DB.filter(i => i.type === 'anion').sort(() => 0.5 - Math.random()).slice(0, 5);
                setLevel1Data([...cations, ...anions].sort(() => 0.5 - Math.random()));

                // Level 2: 10 個化合物
                const compounds = [];
                const allCats = IONS_DB.filter(i => i.type === 'cation');
                const allAns = IONS_DB.filter(i => i.type === 'anion');
                
                while (compounds.length < 10) {
                    const c = allCats[Math.floor(Math.random() * allCats.length)];
                    const a = allAns[Math.floor(Math.random() * allAns.length)];
                    
                    // 計算係數
                    const lcm = (Math.abs(c.charge) * Math.abs(a.charge)) / gcd(Math.abs(c.charge), Math.abs(a.charge));
                    const cCount = lcm / Math.abs(c.charge);
                    const aCount = lcm / Math.abs(a.charge);

                    // 命名邏輯
                    let name = "";
                    let catName = c.name.replace("離子", "").replace("根", ""); // 銨根 -> 銨
                    let anName = a.name.replace("離子", "");

                    if (a.id === 'OH-') {
                        name = (c.id === 'H+') ? "水" : "氫氧化" + catName;
                    } else if (anName.includes("根")) {
                        let baseAnion = anName.replace("根", "");
                        name = (c.id === 'H+') ? baseAnion : baseAnion + catName;
                    } else {
                        name = anName + "化" + catName;
                    }

                    // 避免重複
                    if (!compounds.find(x => x.name === name)) {
                        compounds.push({ 
                            name, 
                            c, a, cCount, aCount,
                            id: Math.random()
                        });
                    }
                }
                setLevel2Data(compounds);
                setStartTime(Date.now());
                setGameState('level1');
            };

            const handleStart = (userData) => {
                setUser(userData);
                initGame();
            };

            const handleSubmitScore = () => {
                const totalTime = Math.floor((Date.now() - startTime) / 1000);
                
                const payload = new URLSearchParams();
                payload.append('name', user.name + (user.id ? `(${user.id})` : ''));
                payload.append('score', totalTime);
                payload.append('level', '2'); // 完成所有關卡
                
                // 上傳並獲取排行榜
                fetch(GAS_URL, { method: 'POST', body: payload, mode: 'no-cors' })
                    .then(() => fetch(GAS_URL))
                    .then(res => res.json())
                    .then(data => {
                        const list = Array.isArray(data) ? data : (data.data || []);
                        list.sort((a, b) => a.score - b.score);
                        setLeaderboard(list);
                        setGameState('leaderboard');
                    })
                    .catch(() => {
                        // 失敗 fallback
                        setLeaderboard([]);
                        setGameState('leaderboard');
                    });
                
                // 為求即時回應，先切換狀態，後續 fetch 完成會更新 list
                setGameState('leaderboard'); 
            };

            // 根據隨機索引渲染動畫
            const renderAnimation = () => {
                switch(animIndex) {
                    case 0: return <AtomAnimation />;
                    case 1: return <BeakerAnimation />;
                    case 2: return <MoleculeAnimation />;
                    default: return <AtomAnimation />;
                }
            };

            // --- 頁面渲染 ---

            if (gameState === 'intro') {
                return (
                    <div className="min-h-screen flex items-center justify-center p-4">
                        <div className="w-full max-w-md bg-white rounded-3xl shadow-2xl p-8 text-center fade-in-up">
                            <h1 className="text-3xl font-bold text-blue-600 mb-2">化學離子大師</h1>
                            <p className="text-gray-500 text-sm mb-6">by 駿佾師</p>
                            
                            {renderAnimation()}

                            <form onSubmit={(e) => { e.preventDefault(); handleStart({ name: e.target.name.value, id: e.target.id.value }); }}>
                                <input name="name" required placeholder="姓名 / 暱稱" className="w-full p-3 mb-3 border-2 border-blue-100 rounded-xl focus:border-blue-500 outline-none" />
                                <input name="id" placeholder="班級座號 (選填)" className="w-full p-3 mb-6 border-2 border-blue-100 rounded-xl focus:border-blue-500 outline-none" />
                                <button type="submit" className="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-xl transition shadow-lg">
                                    開始學習
                                </button>
                            </form>
                        </div>
                    </div>
                );
            }

            if (gameState === 'level1') {
                return (
                    <div className="min-h-screen p-4 pb-20">
                        <div className="max-w-4xl mx-auto">
                            <div className="flex justify-between items-center mb-6">
                                <h2 className="text-2xl font-bold text-gray-800">
                                    <span className="bg-pink-100 text-pink-600 px-3 py-1 rounded-full text-sm mr-2">Level 1</span>
                                    常見離子卡牌
                                </h2>
                                <button onClick={() => setGameState('level2')} className="bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded-full font-bold shadow-md transition">
                                    前往下一關 <i className="fa-solid fa-arrow-right ml-2"></i>
                                </button>
                            </div>

                            <div className="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-4">
                                {level1Data.map((ion, idx) => (
                                    <FlashCard 
                                        key={idx}
                                        number={idx + 1}
                                        front={ion.name}
                                        back={renderIonSymbol(ion)}
                                        colorClass={ion.type === 'cation' ? 'bg-blue-50 border-blue-200' : 'bg-pink-50 border-pink-200'}
                                    />
                                ))}
                            </div>
                        </div>
                    </div>
                );
            }

            if (gameState === 'level2') {
                return (
                    <div className="min-h-screen p-4 pb-20">
                        <div className="max-w-4xl mx-auto">
                            <div className="flex justify-between items-center mb-6">
                                <h2 className="text-2xl font-bold text-gray-800">
                                    <span className="bg-purple-100 text-purple-600 px-3 py-1 rounded-full text-sm mr-2">Level 2</span>
                                    化合物卡牌
                                </h2>
                                <button onClick={handleSubmitScore} className="bg-yellow-500 hover:bg-yellow-600 text-white px-6 py-2 rounded-full font-bold shadow-md transition">
                                    完成學習並查看排行 <i className="fa-solid fa-trophy ml-2"></i>
                                </button>
                            </div>

                            <div className="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
                                {level2Data.map((item, idx) => (
                                    <FlashCard 
                                        key={item.id}
                                        number={idx + 11}
                                        front={item.name}
                                        back={renderCompoundFormula(item.c, item.a, item.cCount, item.aCount)}
                                        colorClass="bg-purple-50 border-purple-200"
                                    />
                                ))}
                            </div>
                        </div>
                    </div>
                );
            }

            if (gameState === 'leaderboard') {
                return (
                    <div className="min-h-screen flex items-center justify-center p-4">
                        <div className="w-full max-w-2xl bg-white rounded-3xl shadow-xl p-6 fade-in-up h-[80vh] flex flex-col">
                            <div className="text-center mb-6">
                                <i className="fa-solid fa-crown text-5xl text-yellow-500 mb-2"></i>
                                <h2 className="text-3xl font-bold text-gray-800">排行榜</h2>
                                <p className="text-gray-500">恭喜完成學習！</p>
                            </div>

                            <div className="flex-1 overflow-y-auto bg-slate-50 rounded-xl border p-4">
                                <table className="w-full text-left">
                                    <thead className="text-gray-500 border-b">
                                        <tr>
                                            <th className="pb-2">排名</th>
                                            <th className="pb-2">姓名</th>
                                            <th className="pb-2 text-right">耗時</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {leaderboard.length === 0 ? (
                                            <tr><td colSpan="3" className="text-center py-8 text-gray-400">載入中或尚無資料...</td></tr>
                                        ) : (
                                            leaderboard.map((row, i) => (
                                                <tr key={i} className="border-b last:border-0 text-gray-700">
                                                    <td className="py-3 font-bold">
                                                        {i < 3 ? <i className={`fa-solid fa-medal mr-2 ${i===0?'text-yellow-500':i===1?'text-gray-400':'text-orange-600'}`}></i> : null}
                                                        {i + 1}
                                                    </td>
                                                    <td className="py-3">{row.name}</td>
                                                    <td className="py-3 text-right font-mono">{row.score}s</td>
                                                </tr>
                                            ))
                                        )}
                                    </tbody>
                                </table>
                            </div>

                            <button onClick={() => window.location.reload()} className="mt-6 w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-xl transition">
                                再玩一次
                            </button>
                        </div>
                    </div>
                );
            }

            return null;
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
